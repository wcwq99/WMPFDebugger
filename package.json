{
  "name": "WMPFDebugger",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "GPL-2.0-only",
  "author": "evi0s",
  "scripts": {
    "dev": "npx ts-node src/index.ts",
    "build": "tsc",
    "package:win": "pkg dist/index.js --targets node22-win-x64 --output WMPFDebugger.exe",
    "release":  "yarn build && yarn package:win"
  },
  "bin": "dist/index.js",
  "pkg": {
    "scripts": [
      "node_modules/bindings/**/*.js",
      "node_modules/frida/**/*.js"
    ],
    "assets": [
      "node_modules/bindings/**/*",
      "node_modules/frida/**/*",
      "node_modules/**/*.node",
      "node_modules/**/package.json"
    ],
    "outputPath": "."
  },
  "dependencies":  {
    "bindings": "^1.5.0",
    "frida": "^17.3.2",
    "protobufjs": "^7.5.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/ws": "^8.18.1",
    "@yao-pkg/pkg": "^6.12.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
